extends ../layout

append title
  title headers-visible-text | checks | axe-playground

block heading
  h1 Checks > headers-visible-text

block fixture

  h3 Pass
  table
    thead
      tr
        th(scope="col") First
        th(scope="col") Last
    tbody
      tr
        td Jerry
        td Seinfeld

  h3 Fail
  table
    thead
      tr
        th(scope="col") First
        th(scope="col" style="display:none;") Last
    tbody
      tr
        td Jerry
        td Seinfeld

append bodyScripts
  script(src="index.js")
